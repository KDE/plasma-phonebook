{
    "id": "org.kde.phonebook",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "plasma-phonebook",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",    
        "--device=dri"
    ],
    "separate-locales": false,
    "cleanup": [
        "*.a",
        "*.la",
        "/doc",
        "/docs",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/lib/x86_64-linux-gnu/cmake",
        "/lib/x86_64-linux-gnu/pkgconfig",
        "/man",
        "/share/cmake",
        "/share/doc",
        "/share/man",
        "/share/pkgconfig"
    ],
    "modules": [
        {
            "name": "kpeople",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/frameworks/kpeople.git", "tag": "v6.3.0" } ]
        },
        {
            "name": "kirigamiaddons",
            "config-opts": [ "-DBUILD_TESTING=OFF" ],
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/libraries/kirigami-addons.git", "branch": "master" } ]
        },
        {
            "name": "plasma-phonebook",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "dir", "path": ".", "skip": [".git"] } ]
        }
    ]
}
